@model IEnumerable<Projet_MobPro.Models.AspNetUsers>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Utilisateurs :</h2>
<br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordHash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.T_role.nom_role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PasswordHash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.T_role.nom_role)
        </td>
        <td>
            @if (ViewBag.CurrentUserRoleId == 1)
            {
                if (item.role_id != 1)
                {
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id })
                    @: |
                }
            }

            @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
