﻿@model IEnumerable<Projet_MobPro.Models.T_niveau_experience>

@{
    ViewBag.Title = "Index";
}

<h2>Niveaux d'expérience</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_niveau_experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.T_domaine.domaine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.T_profil.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.T_offre_emploi.nom)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom_niveau_experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T_domaine.domaine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T_profil.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T_offre_emploi.nom)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.id }, new { @class = "btn-custom-edit" })
                @Html.ActionLink("Détails", "Details", new { id = item.id }, new { @class = "btn-custom-edit" })
                @Html.ActionLink("Supprimer", "Delete", new { id = item.id }, new { @class = "btn-custom-delete" })
            </td>
        </tr>
    }

</table>